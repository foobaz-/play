# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                           main.controllers.Main.index

# Login
GET     /login                      main.controllers.Main.showLoginScreen
GET     /register                   main.controllers.Main.showRegisterScreen
GET     /logout                     main.controllers.Main.logout
POST    /newuser                    main.controllers.Main.newUser
POST    /loginas                    main.controllers.Main.login

# EXPERIMENTS/APPS
# Favorite Color
GET     /favoritecolor              favoriteColors.controllers.FavColor.index
GET     /favoritecolor/question:id  favoriteColors.controllers.FavColor.getQuestion(id: Int)

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)
