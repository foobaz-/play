# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                           main.controllers.EntryPoint.index

# TodoList
GET     /todolist/                  todolist.controllers.TodoList.index
GET     /todolist/alltasks          todolist.controllers.TodoList.showTasks
POST    /todolist/new               todolist.controllers.TodoList.newTask
POST    /todolist/delete:id         todolist.controllers.TodoList.deleteTask(id: Long)

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)
